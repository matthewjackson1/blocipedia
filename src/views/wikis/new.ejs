<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
       <% include ../static/partials/messages.ejs %>
      <a href="/wikis">< Back to all wikis</a>
      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp">
          <small class="text-muted" id="titleHelp">Minimum 5 characters.</small>
      </div>
        </div>
        <div class="form-group">
          <label for="description">Wiki body</label>
          <textarea rows="4" class="form-control" name="body"></textarea>
          <small class="text-muted" id="bodyHelp">Minimum 10 characters.</small>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/wikis" class="btn btn-secondary btn">Cancel</a>
      </form>

    </main>

  </body>
</html>